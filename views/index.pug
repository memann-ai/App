extends layout

block content
  header
    .container
      .f-container
        .f-item
          span.material-icons#open menu
          //- パスはpublic下からでよい
          img#myIcon(src="/images/myIcon.PNG", alt="myIcon")
        .f-item
          form(action="/hello" method="get")
            div
              label(for="explore") 検索
              input#explore(type="text" name="explore")
            input(type="image" src="/images/searchIcon_1x.png" alt="searchIcon")
        nav.f-item
          -for (let i = 1; i <=3; i++)
              li item #{i}

  .overlay 
    span.material-icons#close close
    div 
        a(href="/hello")  Menu1
        a(href="#")  Menu2
        a(href="#")  Menu3

  .main
    .container 
      h1= title
      p #{content}

  script(src="/javascripts/hamburger.js") 